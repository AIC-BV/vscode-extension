{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "value": {
            "title": "Number field type",
            "description": "Renders a single line text input that accepts numbers only",
            "type": "string",
            "const": "number"
        },
        "properties": {
            "properties": {
                "step": {
                    "description": "The amount to iterate up or down",
                    "type": "number",
                    "default": 1
                },
                "min": {
                    "description": "The minimum number allowed for this field",
                    "type": "number",
                    "default": null
                },
                "max": {
                    "description": "The maximum number allowed for this field",
                    "type": "number",
                    "default": null
                }
            }
        }
    }
}
