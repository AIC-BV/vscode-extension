{
	"name": "winter-cms",
	"displayName": "Winter CMS",
	"description": "Official Winter CMS VSCode extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
        "onLanguage:yaml"
    ],
	"main": "./extension.js",
	"contributes": {
        "languages": [
            {
                "id": "wintercms-lang",
                "aliases": ["Winter CMS Template", "wintercms", "winter"],
                "filenamePatterns": [
                    "**/themes/*/**/*.htm"
                ],
                "configuration": "./language/wintercms-language-configuration.json",
                "icon": {
                    "light": "./language/icons/winter-light.png",
                    "dark": "./language/icons/winter-dark.png"
                }
            },
            {
                "id": "wintercms-twig",
                "aliases": ["Winter CMS Template (Twig)", "winter-twig"],
                "configuration": "./language/twig-language-configuration.json",
                "icon": {
                    "light": "./language/icons/winter-light.png",
                    "dark": "./language/icons/winter-dark.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "wintercms-lang",
                "scopeName": "text.html.wintercms",
                "path": "./syntax/wintercms.tmLanguage.json",
                "embeddedLanguages": {
                    "source.ini": "ini",
                    "source.php": "php",
                    "text.html.twig.wintercms": "wintercms-twig"
                }
            },
            {
                "language": "wintercms-twig",
                "scopeName": "text.html.twig.wintercms",
                "path": "./syntax/twig.wintercms.tmLanguage"
            }
        ],
		"yamlValidation": [
			{
			  "fileMatch": "fields.yaml",
			  "url": "./schema/fields.json"
			}
		  ]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
    "dependencies": {
        "php-parser": "^3.0.3",
        "yaml": "^1.10.2"
    },
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"eslint": "^8.6.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-config-airbnb-base": "^15.0.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	},
	"extensionDependencies": [
		"redhat.vscode-yaml"
	]
}
